<%
// ------------------------------------------------------------------------------------------------------------------------------------------------------
// ' FileName      : CDONTS.Plugin
// ' Function      : Sends a mail message to a recipient using the CDONTS component
// ' Requirements  : Dimac JMail Installed ( Free or commercial )
// ' Trigger       : Call CDONTSMail( MxBody, MxSubject, MxRecipient, MxReplyTo, MxFrom, MxFromName, MxQueue, MxIsHtml, MxAppend )
// ' Author        : Patrick Johnson - contact@patrickjohnson.co.uk
// ' Version       : 1.0.0
// ' Last Updated  : 21/05/2012 - P Johnson
// ------------------------------------------------------------------------------------------------------------------------------------------------------

  Sub JMailSender( MxBody, MxSubject, MxRecipient, MxReplyTo, MxFrom, MxFromName, MxQueue, MxIsHtml, MxAppend )
	  
		MxBody      = MxBody
		MxSubject   = MxSubject
		MxFrom      = MxFrom
		MxFromName  = MxFromName
		MxQueue     = MxQueue
		MxIsHtml    = MxIsHtml
		
		On Error Resume Next
		
		If MxAppend = 1 Then
		  MxBody = MxBody & MxAppendText
		End If
		
		Set Mx = CreateObject( MxSelectedComponent )
		Mx.ServerAddress = MxServer
		Mx.Sender        = MxUsername
		Mx.SenderName    = MxFromName
		Mx.AddRecipient  MxRecipient
		Mx.Subject       = MxSubject
		Mx.Body          = MxBody
		Mx.Priority      = 1
		Mx.Execute
		Set Mx           = Nothing
		
	End Sub

